<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />


    <androidx.core.widget.NestedScrollView
        android:layout_gravity="fill_vertical"
        android:id="@+id/scrollview"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="375dp" />





            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F2F3F5"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/label_info"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/tvLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Info"/>
                <TextView
                    android:id="@+id/label_title"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/label_info"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_96"
                    app:layout_constraintTop_toBottomOf="@id/label_info"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/label_sn"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/label_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN"/>
                <TextView
                    android:id="@+id/tv_isbn"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_96"
                    app:layout_constraintTop_toBottomOf="@id/label_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/label_author"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/label_sn"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"/>
                <TextView
                    android:id="@+id/tv_author"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_96"
                    app:layout_constraintTop_toBottomOf="@id/label_sn"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/label_OwnName"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@id/label_author"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OwnName"/>
                <TextView
                    android:id="@+id/tvOwnName"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_96"
                    app:layout_constraintTop_toBottomOf="@id/label_author"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>